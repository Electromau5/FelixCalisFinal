<div class = "container-fluid">
	<h1 style="text-align:center">Edit image</h1>
		<div class = "row">
			<div class = "col-md-6 col-md-offset-3">
				<%= form_for @pin do |l| %>
				<%= l.label :name %>
					<%= l.text_field :name, class: "form-control"%><br /><br />
					
					<%= l.label :image %>
					<%= l.file_field :image, class: "form-control"%><br /><br />
					<%= l.submit 'Update Image' %>
				<% end %>
			</div>
		</div>
</div>